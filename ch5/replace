# replace: replace str1 in files with str2, in place

PATH=/bin:/usr/bin:.

case $# in
0|1|2)	echo 'Usage: replace str1 str2 files' 1>&2; exit 1
esac

vflag=
if test "$1" = -v
then
	vflag="w /dev/tty"
	echo "echoing: $vflag"
	shift
fi

left="$1"; right="$2"; shift; shift

for i
do
	overwrite $i sed "s/$left/$right/g$vflag" $i
done
